<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_marginBottom="10dp"
    android:theme="@android:style/Theme.DeviceDefault.Light.DarkActionBar">


    <!-- The description for the item is set as the text for the checkbox.
        This checkbox enables the user to mark an item as done, and includes
        a few changes to the style and color to make the UI more "beautiful."
    -->
    <CheckBox
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Done"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:buttonTint="#000000"
        />


    <!-- This textview showcases the due date for the item -->
    <TextView
        android:id="@+id/dueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="06-04-2017"
        android:textSize="14dp"
        android:textColor="#000000"/>

    <!-- This textview showcases the category for the item -->
    <TextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:gravity="right"/>

</LinearLayout>